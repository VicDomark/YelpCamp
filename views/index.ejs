<% include partials/header %>

<nav class = "navbar navbar-expand-sm bg-light fixed-top">
    <div class = "container-fluid">
        <a class="navbar-brand" href="/">YelpCamp</a>
        <div class = "collapse navbar-collapse">
            <ul class = "nav navbar-nav ml-auto">
                <li class = "nav-item"><a class="nav-link" href="/">Login</a></li>
                <li class = "nav-item"><a class="nav-link" href="/">Sign Up</a></li>
                <li class = "nav-item"><a class="nav-link" href="/">Logout</a></li>
                
            </ul>
        </div>
    </div>    
</nav>


<div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class = "btn btn-primary btn-lg">Add new campground</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class = "col-lg-12">
            <h3>Our most popular campgrounds</h3>
        </div>
    </div>
    <div class = "row" style = "display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class = "col-md-3 col-sm-6">
                <div class = "card">
                    <img class= "card-img-top" src="<%=campground.image%>">
                    <h5 class="card-title text-center"><%= campground.name%></h5>
                    <p class = "text-center ">
                        <a class = "btn btn-primary btn-sm" href="/campgrounds/<%=campground._id %>">More Info</a>
                    </p>
                </div>
                
            </div>
        <% }); %>
    </div>
</div>   
<% include partials/footer %>

